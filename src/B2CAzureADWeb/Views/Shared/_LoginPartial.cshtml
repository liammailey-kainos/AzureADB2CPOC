<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="navbar-text text-dark">Logged in as: @User.Identity.Name</span>&nbsp;&nbsp;
        </li>
        <li class="nav-item">
            <div class="btn-group" role="group" aria-label="Profile buttons">
                <a role="button" asp-controller="Account" asp-action="EditProfile" class="btn btn-sm btn-secondary">Edit Profile</a>
                <a role="button" asp-controller="Account" asp-action="SignOut" class="btn btn-sm btn-danger">Sign out</a>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a role="button" asp-controller="Account" asp-action="SignIn" class="btn btn-sm btn-primary">Sign in</a>
        </li>
    }
</ul>
